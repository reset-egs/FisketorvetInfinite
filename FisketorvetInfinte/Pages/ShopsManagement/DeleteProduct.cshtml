@page "{id}"
@model FisketorvetInfinte.Pages.ShopsManagement.DeleteProductModel
@{
}

<h1>Delete Product</h1>
<h3>Are you sure you want to delete this product?</h3>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ProductId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Size)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Size)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Colour)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Colour)
            </dd>
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <a asp-page="./Store" class="btn btn-success">Back to store</a>
    </div>
</div>
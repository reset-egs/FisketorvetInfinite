@page "{shopId}"
@model FisketorvetInfinte.Pages.ShopsManagement.DeleteShopModel
@{
}
<h1>Delete Shop</h1>
<h3>Are you sure you want to delete this shop?</h3>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shop)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shop.ShopId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shop.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shop.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shop.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shop.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shop.WorkHour)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shop.WorkHour)
            </dd>
        </dl>
        <input asp-for="@Model.Shop.ShopId" type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <div>
        <a asp-page="AllEvents">Back to List</a>
    </div>
</div>
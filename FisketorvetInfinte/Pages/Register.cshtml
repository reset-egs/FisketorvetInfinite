@page
@model FisketorvetInfinte.Pages.RegisterModel
@{
}

<form method="post">
    <div class="form-group">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <ul>
            <li>
                <label for="username"><b>Username</b></label>
                <input asp-for="@Model.User.Username" type="text" placeholder="Enter Email" name="username" id="username">
            </li>
            <li>
                <label for="password"><b>Password</b></label>
                <input asp-for="@Model.User.Password" type="password" placeholder="Enter Password" name="password" id="password">
            </li>
            <li>
                <label for="password-repeat"><b>Repeat Password</b></label>
                <input asp-for="@Model.User.Password" type="password" placeholder="Repeat Password" name="password-repeat" id="password-repeat">
            </li>

            <li>
                <label for="email"><b>Email</b></label>
                <input asp-for="@Model.User.Email" type="text" placeholder="Enter Email" name="email" id="email">
            </li>

            <li>
                <label for="name"><b>Name</b></label>
                <input asp-for="@Model.User.Name" type="text" placeholder="Enter Name" name="name" id="name">
            </li>

            <li>
                <label for="address"><b>Address</b></label>
                <input asp-for="@Model.User.Address" type="text" placeholder="Enter Address" name="address" id="address">
            </li>
            <li>
                <label for="phonenumber"><b>Phone number</b></label>
                <input asp-for="@Model.User.PhoneNumber" type="text" placeholder="Enter phone number" name="phonenumber" id="phonenumber">
            </li>
        </ul>
        <p>By creating an account you agree to our <a href="/Privacy">Terms & Privacy</a>.</p>
        <input type="submit" value="Register" class="btn btn-primary"/>
    </div>

    <div class="container signin">
        <p>Already have an account? <a href="/Login">Sign in</a>.</p>
    </div>
</form>

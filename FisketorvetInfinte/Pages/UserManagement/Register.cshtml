@page
@model FisketorvetInfinte.Pages.RegisterModel
@{
    if (Model.Role == "admin")
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}

<form method="post">

    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                        <label for="username"><b>Username</b></label>
                        <input asp-for="@Model.User.Username" type="text" placeholder="Enter Username" name="username" id="username">
                        <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <label for="password"><b>Password</b></label>
                <input asp-for="@Model.User.Password" type="password" placeholder="Enter Password" name="password" id="password">
                <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password-repeat"><b>Repeat Password</b></label>
                <input asp-for="@Model.User.ConfirmPassword" type="password" placeholder="Repeat Password" name="confirmpassword" id="confirmpassword">
                <span asp-validation-for="@Model.User.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="email"><b>Email</b></label>
                <input asp-for="@Model.User.Email" type="email" placeholder="Enter Email" name="email" id="email">
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="name"><b>Name</b></label>
                <input asp-for="@Model.User.Name" type="text" placeholder="Enter Name" name="name" id="name">
                <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="address"><b>Address</b></label>
                <input asp-for="@Model.User.Address" type="text" placeholder="Enter Address" name="address" id="address">
                <span asp-validation-for="@Model.User.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="phonenumber"><b>Phone number</b></label>
                <input asp-for="@Model.User.PhoneNumber" type="text" placeholder="Enter phone number" name="phonenumber" id="phonenumber">
                <span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>
            </div>

        <p>By creating an account you agree to our <a href="/Privacy">Terms & Privacy</a>.</p>
        <input type="submit" value="Register" class="btn btn-primary"/>
    </div>
    </div>
    <div class="container signin">
        <p>Already have an account? <a href="/Login">Sign in</a>.</p>
    </div>
</form>

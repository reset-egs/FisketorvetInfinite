@page
@model FisketorvetInfinte.Pages.UserManagement.AllUsersModel
@{
}
<div class="table-responsive-sm">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Adress</th>
                <th scope="col">Phone number</th>
                <th scope="col">Administrator/User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Role</td>

                    <td>
                        <a asp-page="/UserManagement/EditUser" asp-route-username="@user.Username">Edit</a>
                    </td>

                    <td>
                        <a href="#" class="modal-link" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <button type="button" class="btn btn-danger">Delete</button>
                        </a>
                    </td>
                </tr>
            }

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-heather">
                            <h5 class="modal-title" style="text-align:center; width:500px;" id="exampleModalLabel">Delete User</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete user @Model.User.Username</p>
                        </div>
                        <div class="modal-footer">
                            <form asp-page-handler="delete" method="post">
                            <button  type="submit" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" value="Delete" class="btn btn-danger" data-bs-dismiss="modal"> Delete </button></form>
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal"> Cancel </button>

                        </div>
                    </div>
                </div>
            </div>
        </tbody>
    </table>
</div>


@page
@model FisketorvetInfinte.Pages.EventManagement.AllEventsModel
@{
    if (Model.Role == "admin")
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}

<h1>List of events </h1>
@if (Model.Role == "admin")
{
    <p>
        <a asp-page="CreateEvent" class="btn btn-success">Create New</a>
    </p>

}


<table class="table table-striped table-hover">
    <thead class="border-2">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Date & Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.DateTime
                </td>
                @if(Model.Role == "admin")
                {
                    <td>
                        <a asp-page="EditEvent" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>|
                        <a asp-page="DeleteEvent" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>